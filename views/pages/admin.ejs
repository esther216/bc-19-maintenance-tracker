<div class="tab-content">
	<div class="tab-pane fade in active" id="profile" role="tabpanel">
    <br>
		<h2 class="h2-responsive wow fadeInLeft">Profile</h2>
    <p>Name: </p>
    <p>Email: </p>
    <p>Phone Number: </p>
    <p>Role: </p>
  </div>
  <div class=" container tab-pane fade" id="facilities" role="tabpanel">
  	<br>
    <h2 class="h2-responsive wow fadeInLeft">All Facilities</h2>
    <table class="table" id="all-facilities">
		  <thead>
		    <tr>
		        <th>#</th>
		        <th>Facility ID</th>
		        <th>Facility Name</th>
		        <th>Location</th>
		    </tr>
		  </thead>
		  <tbody>

		  </tbody>
		</table>
		<button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#add-facility">Add Facility</button>

		<!--add a facility-->
		<div class="modal fade" id="add-facility" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
		  <div class="modal-dialog modal-sm">
		    <div class="modal-content">
		      <div class="modal-body">
		      	<div class="md-form">
							<i class="fa fa-user prefix"></i>
			        <input type="text" id="facility-name" class="form-control">
			        <label for="facility-name">Facility Name</label>
						</div>
						<div class="md-form">
							<i class="fa fa-user prefix"></i>
			        <input type="text" id="facility-location" class="form-control">
			        <label for="facility-location">Location</label>
						</div>
		      </div>
		      <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" id="facility-btn">Save Changes</button>
          </div>
		    </div>
		  </div>
		</div>
		<!-- add a facility-->

  </div>
  <div class="tab-pane fade" id="requests" role="tabpanel">
  	<br>
    <h2 class="h2-responsive wow fadeInLeft">All Requests</h2>
    <table class="table">
		  <thead>
		    <tr>
		        <th>#</th>
		        <th>Facility Name</th>
		        <th>Description</th>
		        <th>Approval Status</th>
		        <th>Resolved</th>
		    </tr>
		  </thead>
		  <tbody>
			  
			  </tr>
		  </tbody>
		</table> 
  </div>
