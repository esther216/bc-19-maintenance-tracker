<!--Navbar-->
<nav class="navbar navbar-dark bg-primary">
	<div class="container">
		<br>
				<h3>Maintenance Tracker</h3>
				<nav class="navbar navbar-dark bg-primary pull-right">
					<ul class="nav nav-tabs tabs-2" role="tablist">
				    <li class="nav-item">
				       <a class="nav-link active" data-toggle="tab" href="#welcome" role="tab"><i class="fa fa-home"></i>Welcome</a>
				    </li>
				    <li class="nav-item">
				       <a class="nav-link" data-toggle="tab" href="#report" role="tab"><i class="fa fa-envelope"></i>Report A Case</a>
				    </li>
				    <li class="nav-item">
				       <a class="nav-link" data-toggle="tab" href="" role="tab" id="sign-out-btn"><i class="fa fa-sign-out"></i>Sign Out</a>
				    </li>
					</ul>
				</nav>
	</div>
</nav>
<!--/.Navbar-->

<div class="tab-content">
	<div class="tab-pane fade in active" id="welcome" role="tabpanel">
    <br>
		<div class="container">
			<h2 class="h2-responsive wow fadeInLeft blue-text text-center">Hello User!</h2>
	    <p>Trust you are having a great day. Please check your notification for important updates.</p>
	    <p>Do you have an oberservation? Kindly make your request by clicking on the 'Report A Case" tab above. Thank you</>
	    <p><em>Enjoy the rest of your day.</em></p>
		</div>
  </div>
  <div class="tab-pane fade" id="report" role="tabpanel">
    <br>
    <div class="container">
    	<h2 class="h2-responsive wow fadeInLeft">Report A Case</h2>
    	<br>
    	<div class= "row">
    		<div class= "col-md-6 ">
    			<div class="md-form">
    				<p class="blue-text">Select a facility</p>
    				<select id="all" class="md-select">
    				
    				</select>
    				
    			</div>
    		</div>
    	</div>
    	<br>
    	<div class= "row">
    		<div class= "col-md-6">
    			<div class="md-form">
				    <i class="fa fa-pencil prefix"></i>
				    <textarea type="text" id="description" class="md-textarea blue-text"></textarea>
				    <label for="description">Description</label>
					</div>
    		</div>
    	</div>
    	<div class="row">
    		<a class="blue-text" data-toggle="modal" data-target="#image-upload">Upload Image (optional)</a>

				<!-- image upload -->
				<div class="modal fade" id="image-upload" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
				<!--Content-->
				<div class="modal-content">
				<!--Header-->
				  <div class="modal-header">
				    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				      <span aria-hidden="true">&times;</span>
				    </button>
				    <h4 class="modal-title" id="myModalLabel">Image Upload</h4>
				    </div>
				    <!--Body-->
				    <div class="modal-body">
				    	<div class="md-form">
								<i class="fa fa-camera prefix"></i>
				        <input type="file" id="image" class="form-control">
							</div>
				    </div>

				    <!--modal footer-->
				    <div class="modal-footer">
				      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				      <button type="button" class="btn btn-primary" id="image-upload-btn">Upload</button>
				    </div>
					</div>
				<!--/image upload-->
    	</div>
			<button type="button" class="btn btn-primary btn-lg waves-effect pull-right" id="report-btn">Send Report</button>
	    
    </div>
  </div>
</div>